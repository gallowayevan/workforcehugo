{{/* Generates a  search index */}}
{{- $.Scratch.Add "index" slice -}}
{{range (where .Site.RegularPages "Type" "blog")}}
    {{- $.Scratch.Add "index" (dict "title" .Title "keywords" .Params.keywords "teaserText" .Params.teaserText "teaserImage" .Params.teaserImage "summary" .Summary "authors" .Params.author "permalink" .RelPermalink) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
